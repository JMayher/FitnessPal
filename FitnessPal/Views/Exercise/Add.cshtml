@model FitnessPal.Models.AccountViewModels.AddExerciseViewModel

<h1>Add Exercises</h1>

<form asp-controller="Exercise" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Duration"></label>
        <input class="form-control" asp-for="Duration" />
        <span asp-validation-for="Duration"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryID"></label>
        <select asp-for="CategoryID" asp-items="Model.Categories"></select>

        <input type="submit" value="Add Exercise" />
    </div>
</form>
