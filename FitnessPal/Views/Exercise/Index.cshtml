@model List<FitnessPal.Models.Exercise>

<h1>@ViewBag.Title</h1>

<table class="table">

    <tr>
        <th>Exercise</th>
        <th>Duration</th>
        <th>Category</th>
    </tr>

    @foreach (var exercise in Model)
    {
        <tr>
            <td>@exercise.Name</td>
            <td>@exercise.Duration</td>
            <td>@exercise.Category.Name</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No exercises yet!</p>
}



<p><a asp-controller="Exercise" asp-action="Add">Add | </a><a asp-controller="Exercise" asp-action="Remove">Remove</a></p>