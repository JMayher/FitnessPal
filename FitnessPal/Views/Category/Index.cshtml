@model List<FitnessPal.Models.ExerciseCategory>

<h1>Cateogories</h1>

<ul>
    @foreach (var category in Model)
    {

        <li>
            <a asp-controller="Exercise"
               asp-action="Category"
               asp-route-id="@category.ID">@category.Name</a>
        </li>


    }
</ul>
<p><a asp-controller="Category" asp-action="Add">Add Category</a></p>
